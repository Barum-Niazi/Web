<div class="container mt-5">
    <h1 class="mb-4">Your Cart</h1>
    <% if (cart.length > 0) { %>
    <ul class="list-group mb-4">
        <% let totalPrice = 0; %> <% cart.forEach(function(item) { %> <%
        totalPrice += item.price; %>
        <li
            class="list-group-item d-flex justify-content-between align-items-center"
        >
            <div>
                <strong><%= item.name %></strong>
                <p class="mb-1">$<%= item.price.toFixed(2) %></p>
            </div>
            <button
                class="btn btn-danger btn-sm remove-button"
                data-game-name="<%= item.name %>"
            >
                <i class="bi bi-trash"></i> Remove
            </button>
        </li>
        <% }) %>
    </ul>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Total: $<%= totalPrice.toFixed(2) %></h4>
            <a href="/checkout" class="btn btn-success btn-lg btn-block">
                <i class="bi bi-credit-card"></i> Proceed to Checkout
            </a>
        </div>
    </div>
    <% } else { %>
    <div class="alert alert-info">Your cart is empty</div>
    <% } %>
</div>
